                <Cell col="4" edittype="none" style="align:center;" text="bind:birth" editlimit="30"/>
              </Band>
            </Format>
          </Formats>
        </Grid>
        <Static id="sta_01" taborder="31" left="60" top="78" width="480" height="25" style="background:#f0f0f0ff;border:1 solid #969696ff ;"/>
        <Static id="sta_searchKeyword" taborder="32" text="검색어" left="219" top="78" width="80" height="25" style="background:#f4edfaff;border:1 solid #c8c8c8ff ;color:#000080ff;align:center middle;font:bold 9 dotum;"/>
        <Static id="sta_searchCondition" taborder="35" text="검색종류" left="20" top="78" width="80" height="25" style="background:#f4edfaff;border:1 solid #c8c8c8ff ;color:#000080ff;align:center middle;font:bold 9 dotum;"/>
        <Combo id="combo_searchCondition" taborder="36" left="18.83%" top="81" width="100" height="19" text="전체" onitemchanged="Combo00_onitemchanged" codecolumn="codecolumn" datacolumn="datacolumn">
          <Dataset id="innerdataset">
            <ColumnInfo>
              <Column id="codecolumn" size="256"/>
              <Column id="datacolumn" size="256"/>
            </ColumnInfo>
            <Rows>
              <Row>
                <Col id="codecolumn">total</Col>
                <Col id="datacolumn">전체</Col>
              </Row>
              <Row>
                <Col id="codecolumn">name</Col>
                <Col id="datacolumn">이름</Col>
              </Row>
              <Row>
                <Col id="codecolumn">grade</Col>
                <Col id="datacolumn">직급</Col>
              </Row>
              <Row>
                <Col id="codecolumn">dept</Col>
                <Col id="datacolumn">부서</Col>
              </Row>
            </Rows>
          </Dataset>
        </Combo>
        <Edit id="edt_searchKeyword" taborder="37" maxlength="10" left="306" top="81" width="100" height="19"/>
        <Button id="btn_emp_reset" taborder="39" text="초기화" left="476" top="81" width="57" height="19" style="background:URL('img::btn_imgs.png') stretch 0,0;border:0 solid #999999ff ;color:#ffffffff;bordertype:round 3 3 ;align:center middle;font:bold 13 Stencil;gradation:linear 0,0 #fefefeff 0,0 #ecece5ff;" onclick="btn_emp_reset_onclick"/>
        <Button id="btn_emp_search" taborder="40" text="검색" left="413" top="81" width="57" height="19" style="background:URL('img::btn_imgs.png') stretch 0,0;border:0 solid #999999ff ;color:#ffffffff;bordertype:round 3 3 ;align:center middle;font:bold 13 Stencil;gradation:linear 0,0 #fefefeff 0,0 #ecece5ff;" onclick="btn_emp_search_onclick"/>
        <Button id="btn_emp_cancel" taborder="41" text="취소" left="285" top="427" width="84" height="27" style="background:URL('img::btn_imgs.png') stretch 0,0;border:0 solid #999999ff ;color:#ffffffff;bordertype:round 3 3 ;align:center middle;font:bold 15 Stencil;gradation:linear 0,0 #fefefeff 0,0 #ecece5ff;" onclick="btn_emp_cancel_onclick"/>
        <Button id="btn_emp_select" taborder="42" text="선택" left="189" top="427" width="84" height="27" style="background:URL('img::btn_imgs.png') stretch 0,0;border:0 solid #999999ff ;color:#ffffffff;bordertype:round 3 3 ;align:center middle;font:bold 15 Stencil;gradation:linear 0,0 #fefefeff 0,0 #ecece5ff;" onclick="btn_emp_select_onclick"/>
      </Layout>
    </Layouts>
    <Objects>
      <Dataset id="ds_emp">
        <ColumnInfo>
          <Column id="emp_no" type="STRING" size="256"/>
          <Column id="emp_name" type="STRING" size="256"/>
          <Column id="grade" type="STRING" size="256"/>
          <Column id="dept" type="STRING" size="256"/>
          <Column id="birth" type="STRING" size="256"/>
        </ColumnInfo>
      </Dataset>
      <Dataset id="ds_search">
        <ColumnInfo>
          <Column id="searchKeyword" type="STRING" size="256"/>
          <Column id="searchCondition" type="STRING" size="256"/>
        </ColumnInfo>
        <Rows>
          <Row/>
        </Rows>
      </Dataset>
    </Objects>
    <Bind>
      <BindItem id="item1" compid="combo_searchCondition" propid="value" datasetid="ds_search" columnid="searchCondition"/>
      <BindItem id="item0" compid="edt_searchKeyword" propid="value" datasetid="ds_search" columnid="searchKeyword"/>
    </Bind>
    <InitValue/>
    <Script type="xscript5.0"><![CDATA[
include "Lib::common.xjs";


this.btn_emp_cancel_onclick = function(obj:Button, e:nexacro.ClickEventInfo)
{
	this.close();
}



this.btn_emp_reset_onclick = function(obj:Button, e:nexacro.ClickEventInfo)
{
	this.reload();
}


this.empSearch_onload = function(obj:Form, e:nexacro.LoadEventInfo)
{
	
	this.btn_emp_search_onclick();
	
}
this.btn_emp_search_onclick = function(obj:Button, e:nexacro.ClickEventInfo)
{
	this.ds_search.setColumn(0,"searchKeyword",this.edt_searchKeyword.value);
	this.ds_search.setColumn(0,"searchCondition",this.combo_searchCondition.value);

	this.gfn_transaction(this,
 						"empSearch_YJB",
 						"empSelectVO_YJB.do",
 						"ds_search=ds_search",
 						"ds_emp=output1",
 						"",
 						"transaction_callback"
 						);
}
this.transaction_callback = function(sSvcId, nErrorCode, sErrorMsg)
{
	if(nErrorCode < 0)
	{
		this.alert(sSvcId + " : " + sErrorMsg);
		return;
	}
	
}
this.btn_emp_select_onclick = function(obj:Button, e:nexacro.ClickEventInfo)
{

      var emp_no = this.ds_emp.getColumn(this.ds_emp.rowposition, "emp_no");   
      var emp_name = this.ds_emp.getColumn(this.ds_emp.rowposition, "emp_name");

	  application.gds_empno.addRow();
	  application.gds_empno.setColumn(application.gds_empno.rowposition, "emp_no", emp_no);
	  application.gds_empno.setColumn(application.gds_empno.rowposition, "emp_name", emp_name);
	  application.gds_empno.getColumn(application.gds_empno.rowposition, "emp_name"); 
	  
	  
	  var emp_noName = emp_name + ',' + emp_no;
 	  this.close(emp_noName);


}]]></Script>
  </Form>
</FDL>
