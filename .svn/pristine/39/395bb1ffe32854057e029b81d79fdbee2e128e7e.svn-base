    <Layouts>
      <Layout>
        <Div id="joinTitle" taborder="27" text="  사원 검색" left="9" top="6" width="544" height="50" style="align:left;background:#165fa6ff;border:1 solid #e5e5e5ff ;color:#ffffffff;font:bold 16 Arial Black;">
          <Layouts>
            <Layout width="544" height="50"/>
          </Layouts>
        </Div>
        <Grid id="grd_empList" taborder="29" binddataset="ds_emp" scrollbars="autovert" useinputpanel="false" autofittype="col" nodatatext="데이터가 없습니다." left="19" top="127" width="520" height="272">
          <Formats>
            <Format id="default">
              <Columns>
                <Column size="130"/>
                <Column size="131"/>
                <Column size="131"/>
                <Column size="131"/>
                <Column size="131"/>
              </Columns>
              <Rows>
                <Row size="24" band="head"/>
                <Row size="24"/>
              </Rows>
              <Band id="head">
                <Cell style="font:bold 9 dotum;" text="사번"/>
                <Cell col="1" style="font:bold 9 dotum;" text="이름"/>
                <Cell col="2" style="font:bold 9 dotum;" text="직위"/>
                <Cell col="3" style="font:bold 9 dotum;" text="부서"/>
