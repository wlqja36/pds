    <InitValue/>
    <Script type="xscript5.0"><![CDATA[
include "Lib::common.xjs";


//취소버튼
this.Button01_onclick = function(obj:Button,  e:nexacro.ClickEventInfo)
{
	this.close();
}

//폼온로드
this.empSearch_onload = function(obj:Form, e:nexacro.LoadEventInfo)
{
	this.btn_sc_onclick();
}

//리로드
this.btn_reset_onclick = function(obj:Button, e:nexacro.ClickEventInfo)
{
	this.reload();
}


//콜백 
this.transaction_callback = function(sSvcId, nErrorCode, sErrorMsg)
{
	if(nErrorCode < 0)
	{
		this.alert(sSvcId + " : " + sErrorMsg);
		return;
	}
}


//선택누를시
this.Button00_onclick = function(obj:Button, e:nexacro.ClickEventInfo)
{
		var emp_name = this.ds_emp.getColumn(this.ds_emp.rowposition, "emp_name");
		var strReturn = emp_name;
		
		this.opener.edt_btr_no00.set_value(strReturn);
		this.close(strReturn);
		
}

//조회보내기
this.btn_sc_onclick = function(obj:Button, e:nexacro.ClickEventInfo)
{
		
	var nRow = this.ds_search.addRow();
	this.ds_search.setColumn(nRow,"keyword",this.Edit05.value);
	this.ds_search.setColumn(nRow,"search_condition",this.Combo00.value);
	

	this.gfn_transaction(this,
 						"s_emp_name",
 						"s_empSearchVO.do",
 						"ds_search=ds_search",
 						"ds_emp=ds_output",
 						"",
 						"transaction_callback"
 						);
 	if(this.ds_search.getColumn(nRow, "search_condition")==null ||
		this.ds_search.getColumn(nRow, "search_condition")=="")
		{
			this.ds_search.setColumn(0,"search_condition","total");
		}	
 	
	
}



this.fn_popupCallback = function(strPopupID, strReturn)
{
    if(strReturn == undefined){
        return;
    }

    if(strPopupID == "s_emp_name"){
        this.alert("Return Value: " + strReturn);
    }
};]]></Script>
